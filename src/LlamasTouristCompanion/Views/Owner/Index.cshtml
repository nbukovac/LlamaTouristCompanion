@model Owner

@{
    ViewBag.Title = "Owner Profile";
}

<h2>@Model.Name</h2>

<dl class="dl-horizontal">
    <dt>
        Email:
    </dt>
    <dd>
        @Html.DisplayFor(model => model.Email)
    </dd>
    <dt>
        Phone:
    </dt>
    <dd>
        @Html.DisplayFor(model => model.Phone)
    </dd>
    <dt>
        Facebook:
    </dt>
    <dd>
        @Html.DisplayFor(model => model.FacebookUrl)
    </dd>
    <dt>
        Instagram:
    </dt>
    <dd>
        @Html.DisplayFor(model => model.InstagramUrl)
    </dd>
    <dt>
        Twitter:
    </dt>
    <dd>
        @Html.DisplayFor(model => model.TwitterUrl)
    </dd>
    <dt>
        Youtube:
    </dt>
    <dd>
        @Html.DisplayFor(model => model.YoutubeUrl)
    </dd>
</dl>

<br />
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.OwnerId })
</p>
<br />
<table class="table">
    <tr>
        <th></th>
        <th>
            Name
        </th>
        <th>
            Address
        </th>
        <th>
            CheckIn
        </th>
        <th>
            CheckOut
        </th>
    </tr>


    @foreach (var item in ViewBag.Apartments)
    {
        <tr>
            <td></td>
            <td>
                @item.Name
            </td>
            <td>
                @item.Address
            </td>
            <td>
                @item.CheckIn
            </td>
            <td>
                @item.CheckOut
            </td>
            <td>
                <a href="/apartment/Edit?id=@item.ApartmentId">Edit</a> |
                <a href="/apartment/Delete?id=@item.ApartmentId">Delete</a>
            </td>
        </tr>
    }

</table>

<p>
    <a href="/apartment/Create">Create New</a>
</p>